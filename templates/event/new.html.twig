{% extends 'base.html.twig' %}

{% block title %}Nouvel évènement{% endblock %}

{% block h1 %}Créer une sortie{% endblock %}

{% block body %}
    <div>
        {{ form_start(form) }}

        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_help(form.name) }}

        {#
        {% if app.user  %}
            <label for="idschool"> Ville organisatrice :</label>
            <input type="text" disabled value=" {{ app.user.school.name }}" class="form-control" id="idschool" />
        {% endif %}

        {% if place.address %}
            <label for="idstreet">Rue :</label>
            <input type="text" disabled value="{{ app.user.place.address }}" class="form-control" id="idstreet" />
        {% endif %}

        {% if city.zipcode %}
            <label for="idzipcode">Code postal :</label>
            <input type="text" disabled value="{{ app.user.city.zipcode }}" class="form-control" id="idzipcode" />
        {% endif %}

        {% if place.latitude %}
            <label for="idlatitude">Latitude :</label>
            <input type="text" disabled value="{{ app.user.place.latitude }}" class="form-control" id="idlatitude" />
        {% endif %}

        {% if place.longitude %}
            <label for="idlongitude">longitude :</label>
            <input type="text" disabled value="{{ app.user.place.longitude }}" class="form-control" id="idlongitude" />
        {% endif %}
        #}

        {{ form_label(form.start) }}
        {{ form_widget(form.start) }}
        {{ form_help(form.start) }}

        {{ form_label(form.end) }}
        {{ form_widget(form.end) }}
        {{ form_help(form.end) }}

        {{ form_label(form.limitdate) }}
        {{ form_widget(form.limitdate) }}
        {{ form_help(form.limitdate) }}

        {{ form_label(form.maxsize) }}
        {{ form_widget(form.maxsize) }}
        {{ form_help(form.maxsize) }}

        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        {{ form_help(form.description) }}

        <div>
            <label for="city"> Ville</label>
            <select name="city" class="form-control" id="city">
                {% for city in cities %}
                    <option value="{{ city.id }}">{{ city.name }}</option>
                {% endfor %}
            </select>
        </div>

        {{ form_label(form.place) }}
        {{ form_widget(form.place) }}
        {{ form_help(form.place) }}

        <div>
            <strong>Adresse</strong>
            <p id="address"></p>
            <strong>Latitude</strong>
            <p id="latitude"></p>
            <strong>Longitude</strong>
            <p id="longitude"></p>
        </div>

        <button class="btn btn-info">{{ button_label|default('Enregistrer') }}</button>
        <a href="{{ path('event_index') }}" class="btn btn-danger">Annuler et revenir à l'accueil</a>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/places.js') }}"></script>
{% endblock %}