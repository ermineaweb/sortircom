{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block h1 %}Gestion des villes{% endblock %}

{% block body %}
    <div>
        <label for="search">Rechercher :</label>
        <input type="text" name="search" id="search" class="form-control">
        <hr>
        {% if app.user.admin %}

        {{ form_start(form) }}
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_help(form.name) }}
        {{ form_label(form.zipcode) }}
        {{ form_widget(form.zipcode) }}
        {{ form_help(form.zipcode) }}
        <button class="button btn btn-info">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}

        {% endif %}
    </div>

    <div>
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Code postal</th>

                {% if app.user.admin %}
                <th>Actions</th>
                {% endif %}

            </tr>
            </thead>
            <tbody id="table">
            {% for city in cities %}
                <tr>
                    <td>{{ city.name }}</td>
                    <td>{{ city.zipcode }}</td>
                    {% if app.user.admin %}
                    <td>
                        <a href="{{ path('city_edit', {'id': city.id}) }}">Modifier</a>
                        {% include 'city/_delete_form.html.twig' %}
                    </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune ville n'est enregistr√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/search.js') }}"></script>
{% endblock %}
