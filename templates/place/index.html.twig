{% extends 'base.html.twig' %}

{% block title %}Liste des lieux de sortie{% endblock %}

{% block h1 %}Liste des lieux de sortie{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Longitude</th>
                <th>Latitude</th>
                {% if app.user.admin %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.name }}</td>
                <td>{{ place.address }}</td>
                <td>{{ place.city.name }}</td>
                <td>{{ place.longitude }}</td>
                <td>{{ place.latitude }}</td>
                {% if app.user.admin %}
                <td>
                    <a href="{{ path('place_show', {'id': place.id}) }}">show</a>
                    <a href="{{ path('place_edit', {'id': place.id}) }}">edit</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun lieu de sortie enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {%  if app.user.admin %}
    <a href="{{ path('place_new') }}">Enregistrer</a>
    {% endif %}
{% endblock %}
