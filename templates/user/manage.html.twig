{% extends 'base.html.twig' %}

{% block title %}Gérer les utilisateurs{% endblock %}

{% block h1 %}Gestion des utilisateurs {% endblock %}

{% block body %}


    <div>
        <label for="search">Recherche</label>
        <input type="text" name="search" id="search" class="form-control">
        <hr>
        <a class="btn btn-info" href="{{ path('user_new') }}">Créer un nouvel utilisateur</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Nom prénom</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th>Avatar</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody id="table">
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.lastname }} {{ user.firstname }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.email }}</td>
                <td><img src="{{ asset('assets/img/avatar/') }}{{ user.avatar }}" alt="" style="width: 50px;"></td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><i class="icone-actions fa fa-search-plus"></i></a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="icone-actions fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun utilisateur enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/search.js') }}"></script>
{% endblock %}


